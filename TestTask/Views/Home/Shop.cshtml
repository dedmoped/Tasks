
@model IEnumerable<TestTask.Models.Magazines>
@{
    ViewBag.Title = "Shop";
}

<div><b>Shops</b><br /></div>
<table  class="color_table table table-bordered table-responsive" style="border: 1px solid black; cursor: pointer;
border-collapse: collapse;">
    <tr id="first_tr">
        <th>Name </th>
        <th>Adress </th>
        <th style="width: 140px;">WorkTime</th>
        <th style="width: 140px;">Products</th>
    </tr>
    @foreach (var d in Model)
    {
        <tr class="alternate_color">
            <td>@d.name</td>
            <td>@d.adress</td>
            <td>@d.worktime</td>
            <td><a href="/Home/Products?id=@d.id">Продукты</a></td>
        </tr>

    }
</table>  
<style type="text/css">
    .color_table th, #first_tr {
        background-color: cornsilk;
    }
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js">
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $(".color_table tr:not(#first_tr)").addClass("colors");

        $(".colors:last").css("background-color", "#90ee90");
        var tr_clr = $(".colors:last").css("background-color");
        $(".colors:last").css("background-color", "white");

        $(".colors").hover(function () {
            if ($(this).css("background-color") != tr_clr)
                $(this).css("background-color", "yellow")
        }, function () {
            if ($(this).css("background-color") != tr_clr)
                $(this).css("background-color", "white")
        });

        $(".colors").click(function () {
            if ($(this).css("background-color") != tr_clr)
                $(this).css("background-color", tr_clr)
            else $(this).css("background-color", "yellow")
        });
    });
</script>
